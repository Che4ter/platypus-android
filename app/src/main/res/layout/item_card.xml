<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/md_keylines"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines"
    android:foreground="?attr/selectableItemBackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/md_keylines"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_marginRight="@dimen/md_keylines"
            android:layout_marginTop="@dimen/md_keylines"
            android:ellipsize="end"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/article_subheading" />

        <ImageButton
            android:id="@+id/upvote_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_height"
            android:layout_marginRight="@dimen/md_keylines"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/downvote_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_height"
            android:layout_marginRight="@dimen/md_keylines"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/card_text" />

        <TextView
            android:id="@+id/card_voteCount"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="@dimen/md_keylines"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/downvote_button"
            android:layout_below="@+id/upvote_button"
            android:ellipsize="end"
            android:textSize="16sp" />

        <Button
            android:id="@+id/action_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_text"
            android:text="Action"
            android:textColor="?attr/colorPrimary" />

        <ImageButton
            android:id="@+id/comment_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_height"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/card_text"
            android:layout_marginRight="@dimen/md_keylines"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_comment_black_24dp" />

        <TextView
            android:id="@+id/card_creationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_text"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/downvote_button"
            android:layout_toRightOf="@+id/action_button"
            android:ellipsize="end"
            android:textSize="12sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
